// crair uma classe carro 
public class Carro {
    // atributos
    public String chassi;
    public String modelo;
    public String marca;
    private int tamanhoTanque;
    private int qntCombustivel;
// contrutor
    public Carro(int tamanhoTanque) {
        this.tamanhoTanque = tamanhoTanque;
    }
public Carro(int tamanhoTanque,String chassi, String modelo, String marca){
        this(tamanhoTanque,modelo,marca);
        this.chassi = chassi;
    }
public Carro(int tamanhoTanque, String modelo, String marca){
        this(tamanhoTanque);
        this.modelo = modelo;
        this.marca = marca;
    }
// metodos
    public void buzinar(){
        System.out.println("bi bi bi");
    }
    public void acelerar(){
        System.out.println( "o carro " +this.marca +"-" +this.modelo +" está");
        if(this.qntCombustivel >0){
            System.out.println("acelerando");
            qntCombustivel --;
        } else{
            System.out.println("tanque vazio");
        }
        
    }
    // metodos
     public void frear(){
        System.out.println("Freando");
    }
    // ser a quantide de conbustivel for maior que o tamanho do tanque
    // não vai caber no tamque
    public void abastecer (int litros){
       if( qntCombustivel + litros >tamanhoTanque){
        System.out.println("não cabe no tamque");
       } else{
        qntCombustivel+=litros;
       }
    }
}
